{
  // oclif doesn't follow the "extends"
  // can re-enable if https://github.com/oclif/config/pull/177 is merged
  // "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "lib": ["es2021"],
    "target": "es2021",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts", "**/testUtil.ts", "lib"]
}
