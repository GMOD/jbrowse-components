{
  "name": "@jbrowse/desktop",
  "version": "4.0.4",
  "type": "module",
  "description": "JBrowse desktop application specialized to inspect structural variants",
  "license": "Apache-2.0",
  "homepage": "./",
  "author": "JBrowse Team",
  "main": "public/electron.js",
  "dir": "src",
  "repository": "https://github.com/GMOD/jbrowse-components.git",
  "scripts": {
    "start": "NODE_ENV=development node scripts/start.js",
    "electron": "electron . --no-sandbox",
    "electron-ts": "tsc -p tsconfig.electron.json",
    "preelectron": "pnpm electron-ts",
    "prebuild": "pnpm electron-ts",
    "prepack": "pnpm build",
    "build": "NODE_ENV=production node scripts/build.js",
    "build-electron": "pnpm build && electron-builder build --windows --mac --linux",
    "build-electron:win": "pnpm build && electron-builder build --windows",
    "build-electron:mac": "pnpm build && electron-builder build --mac",
    "build-electron:linux": "pnpm build && electron-builder build --linux",
    "build-electron-unpacked": "pnpm build && electron-builder build --windows --mac --linux --dir",
    "build-electron-unpacked:win": "pnpm build && electron-builder build --windows --dir",
    "build-electron-unpacked:mac": "pnpm build && electron-builder build --mac --dir",
    "build-electron-unpacked:linux": "pnpm build && electron-builder build --linux --dir",
    "build-electron-prepackaged": "pnpm build-electron-prepackaged:win && pnpm build-electron-prepackaged:mac && pnpm build-electron-prepackaged:linux",
    "build-electron-prepackaged:win": "electron-builder build --windows --prepackaged dist/win-unpacked",
    "build-electron-prepackaged:mac": "electron-builder build --mac --prepackaged dist/mac/",
    "build-electron-prepackaged:linux": "electron-builder build --linux --prepackaged dist/linux-unpacked/",
    "build-electron-only": "electron-builder build --windows --mac --linux",
    "build-electron-only:win": "electron-builder build --windows",
    "build-electron-only:mac": "electron-builder build --mac",
    "build-electron-only:linux": "electron-builder build --linux",
    "build-electron-only-unpacked": "electron-builder build -wml --dir",
    "build-electron-only-unpacked:win": "electron-builder build -w --dir",
    "build-electron-only-unpacked:mac": "electron-builder build -m --dir",
    "build-electron-only-unpacked:linux": "electron-builder build -l --dir",
    "test:e2e": "node --experimental-strip-types test/e2e.ts",
    "test:e2e:headless": "xvfb-run --auto-servernum node --experimental-strip-types test/e2e.ts --headless",
    "test:e2e:build": "pnpm build-electron-unpacked:linux && pnpm test:e2e",
    "test:e2e:ci": "pnpm build-electron-unpacked:linux && pnpm test:e2e:headless"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@fontsource/roboto": "^5.2.9",
    "@gmod/faidx": "^2.0.0",
    "@jbrowse/app-core": "workspace:^",
    "@jbrowse/core": "workspace:^",
    "@jbrowse/mobx-state-tree": "^5.5.0",
    "@jbrowse/plugin-alignments": "workspace:^",
    "@jbrowse/plugin-arc": "workspace:^",
    "@jbrowse/plugin-authentication": "workspace:^",
    "@jbrowse/plugin-bed": "workspace:^",
    "@jbrowse/plugin-breakpoint-split-view": "workspace:^",
    "@jbrowse/plugin-canvas": "workspace:^",
    "@jbrowse/plugin-circular-view": "workspace:^",
    "@jbrowse/plugin-comparative-adapters": "workspace:^",
    "@jbrowse/plugin-config": "workspace:^",
    "@jbrowse/plugin-data-management": "workspace:^",
    "@jbrowse/plugin-dotplot-view": "workspace:^",
    "@jbrowse/plugin-gccontent": "workspace:^",
    "@jbrowse/plugin-gff3": "workspace:^",
    "@jbrowse/plugin-grid-bookmark": "workspace:^",
    "@jbrowse/plugin-gtf": "workspace:^",
    "@jbrowse/plugin-hic": "workspace:^",
    "@jbrowse/plugin-jobs-management": "workspace:^",
    "@jbrowse/plugin-legacy-jbrowse": "workspace:^",
    "@jbrowse/plugin-linear-comparative-view": "workspace:^",
    "@jbrowse/plugin-linear-genome-view": "workspace:^",
    "@jbrowse/plugin-lollipop": "workspace:^",
    "@jbrowse/plugin-menus": "workspace:^",
    "@jbrowse/plugin-rdf": "workspace:^",
    "@jbrowse/plugin-sequence": "workspace:^",
    "@jbrowse/plugin-spreadsheet-view": "workspace:^",
    "@jbrowse/plugin-sv-inspector": "workspace:^",
    "@jbrowse/plugin-text-indexing": "workspace:^",
    "@jbrowse/plugin-trix": "workspace:^",
    "@jbrowse/plugin-variants": "workspace:^",
    "@jbrowse/plugin-wiggle": "workspace:^",
    "@jbrowse/product-core": "workspace:^",
    "@jbrowse/text-indexing": "workspace:^",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.6",
    "@mui/x-data-grid": "^8.25.0",
    "@tanstack/react-table": "^8.21.3",
    "date-fns": "^4.1.0",
    "deepmerge": "^4.3.1",
    "dockview": "^4.13.1",
    "electron-context-menu": "^4.1.1",
    "electron-debug": "^4.1.0",
    "electron-updater": "^6.7.3",
    "electron-window-state": "^5.0.3",
    "json-parse-even-better-errors": "^5.0.0",
    "mobx": "^6.15.0",
    "mobx-react": "^9.2.1",
    "node-fetch": "^2.7.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sanitize-filename": "^1.6.3",
    "swr": "^2.3.8"
  },
  "devDependencies": {
    "@types/selenium-webdriver": "^4.35.5",
    "electron": "40.0.0",
    "electron-chromedriver": "^40.0.0",
    "selenium-webdriver": "^4.39.0"
  },
  "browserslist": [
    "last 1 chrome version"
  ],
  "build": {
    "electronVersion": "40.0.0",
    "extraMetadata": {
      "main": "build/electron.js"
    },
    "appId": "org.jbrowse2.app",
    "productName": "JBrowse 2",
    "copyright": "Copyright Â© 2019",
    "fileAssociations": [
      {
        "ext": "jbrowse",
        "name": "JBrowse",
        "role": "Editor"
      }
    ],
    "nsis": {
      "perMachine": true
    },
    "win": {
      "sign": "./sign.js",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "publish": [
        "github"
      ],
      "artifactName": "jbrowse-desktop-v${version}-win.${ext}"
    },
    "linux": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "AppImage"
        }
      ],
      "executableName": "jbrowse-desktop",
      "artifactName": "jbrowse-desktop-v${version}-linux.${ext}"
    },
    "deb": {
      "maintainer": "colin.diesh@gmail.com"
    },
    "snap": {
      "confinement": "strict",
      "plugs": [
        "default",
        "removable-media"
      ],
      "slots": [
        "default"
      ]
    },
    "mac": {
      "mergeASARs": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "publish": [
        "github"
      ],
      "category": "public.app-category.utilities",
      "artifactName": "jbrowse-desktop-v${version}-mac.${ext}"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": [
      "github"
    ],
    "directories": {
      "buildResources": "assets/"
    },
    "afterSign": "scripts/notarize.js",
    "afterPack": "./linux-sandbox-fix.js"
  },
  "private": true
}
