{
  "name": "@jbrowse/desktop",
  "version": "4.0.3",
  "type": "module",
  "description": "JBrowse desktop application specialized to inspect structural variants",
  "license": "Apache-2.0",
  "homepage": "./",
  "author": "JBrowse Team",
  "main": "public/electron.js",
  "dir": "src",
  "repository": "https://github.com/GMOD/jbrowse-components.git",
  "scripts": {
    "start": "NODE_ENV=development node scripts/start.js",
    "electron": "electron . --no-sandbox",
    "electron-ts": "tsc -p tsconfig.electron.json",
    "preelectron": "yarn electron-ts",
    "prebuild": "yarn electron-ts",
    "prepack": "yarn build",
    "build": "NODE_ENV=production node scripts/build.js",
    "build-electron": "yarn build && electron-builder build --windows --mac --linux",
    "build-electron:win": "yarn build && electron-builder build --windows",
    "build-electron:mac": "yarn build && electron-builder build --mac",
    "build-electron:linux": "yarn build && electron-builder build --linux",
    "build-electron-unpacked": "yarn build && electron-builder build --windows --mac --linux --dir",
    "build-electron-unpacked:win": "yarn build && electron-builder build --windows --dir",
    "build-electron-unpacked:mac": "yarn build && electron-builder build --mac --dir",
    "build-electron-unpacked:linux": "yarn build && electron-builder build --linux --dir",
    "build-electron-prepackaged": "yarn build-electron-prepackaged:win && yarn build-electron-prepackaged:mac && yarn build-electron-prepackaged:linux",
    "build-electron-prepackaged:win": "electron-builder build --windows --prepackaged dist/win-unpacked",
    "build-electron-prepackaged:mac": "electron-builder build --mac --prepackaged dist/mac/",
    "build-electron-prepackaged:linux": "electron-builder build --linux --prepackaged dist/linux-unpacked/",
    "build-electron-only": "electron-builder build --windows --mac --linux",
    "build-electron-only:win": "electron-builder build --windows",
    "build-electron-only:mac": "electron-builder build --mac",
    "build-electron-only:linux": "electron-builder build --linux",
    "build-electron-only-unpacked": "electron-builder build -wml --dir",
    "build-electron-only-unpacked:win": "electron-builder build -w --dir",
    "build-electron-only-unpacked:mac": "electron-builder build -m --dir",
    "build-electron-only-unpacked:linux": "electron-builder build -l --dir",
    "test:e2e": "node --experimental-strip-types test/e2e.ts",
    "test:e2e:headless": "xvfb-run --auto-servernum node --experimental-strip-types test/e2e.ts --headless",
    "test:e2e:build": "yarn build-electron-unpacked:linux && yarn test:e2e",
    "test:e2e:ci": "yarn build-electron-unpacked:linux && yarn test:e2e:headless"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@fontsource/roboto": "^5.2.9",
    "@gmod/faidx": "^2.0.0",
    "@jbrowse/app-core": "^4.0.3",
    "@jbrowse/core": "^4.0.3",
    "@jbrowse/mobx-state-tree": "^5.5.0",
    "@jbrowse/plugin-alignments": "^4.0.3",
    "@jbrowse/plugin-arc": "^4.0.3",
    "@jbrowse/plugin-authentication": "^4.0.3",
    "@jbrowse/plugin-bed": "^4.0.3",
    "@jbrowse/plugin-breakpoint-split-view": "^4.0.3",
    "@jbrowse/plugin-canvas": "^4.0.3",
    "@jbrowse/plugin-circular-view": "^4.0.3",
    "@jbrowse/plugin-comparative-adapters": "^4.0.3",
    "@jbrowse/plugin-config": "^4.0.3",
    "@jbrowse/plugin-data-management": "^4.0.3",
    "@jbrowse/plugin-dotplot-view": "^4.0.3",
    "@jbrowse/plugin-gccontent": "^4.0.3",
    "@jbrowse/plugin-gff3": "^4.0.3",
    "@jbrowse/plugin-grid-bookmark": "^4.0.3",
    "@jbrowse/plugin-gtf": "^4.0.3",
    "@jbrowse/plugin-hic": "^4.0.3",
    "@jbrowse/plugin-jobs-management": "^4.0.3",
    "@jbrowse/plugin-legacy-jbrowse": "^4.0.3",
    "@jbrowse/plugin-linear-comparative-view": "^4.0.3",
    "@jbrowse/plugin-linear-genome-view": "^4.0.3",
    "@jbrowse/plugin-lollipop": "^4.0.3",
    "@jbrowse/plugin-menus": "^4.0.3",
    "@jbrowse/plugin-rdf": "^4.0.3",
    "@jbrowse/plugin-sequence": "^4.0.3",
    "@jbrowse/plugin-spreadsheet-view": "^4.0.3",
    "@jbrowse/plugin-sv-inspector": "^4.0.3",
    "@jbrowse/plugin-text-indexing": "^4.0.3",
    "@jbrowse/plugin-trix": "^4.0.3",
    "@jbrowse/plugin-variants": "^4.0.3",
    "@jbrowse/plugin-wiggle": "^4.0.3",
    "@jbrowse/product-core": "^4.0.3",
    "@jbrowse/text-indexing": "^4.0.3",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.6",
    "@mui/x-data-grid": "^8.23.0",
    "@tanstack/react-table": "^8.21.3",
    "date-fns": "^4.1.0",
    "deepmerge": "^4.3.1",
    "dockview": "^4.13.1",
    "electron-context-menu": "^4.1.1",
    "electron-debug": "^4.1.0",
    "electron-updater": "^6.6.2",
    "electron-window-state": "^5.0.3",
    "json-parse-even-better-errors": "^5.0.0",
    "mobx": "^6.15.0",
    "mobx-react": "^9.2.1",
    "node-fetch": "^2.7.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sanitize-filename": "^1.6.3",
    "swr": "^2.3.8"
  },
  "devDependencies": {
    "@types/selenium-webdriver": "^4.35.5",
    "electron": "39.2.7",
    "electron-chromedriver": "^39.2.7",
    "selenium-webdriver": "^4.39.0"
  },
  "browserslist": [
    "last 1 chrome version"
  ],
  "build": {
    "electronVersion": "39.2.7",
    "extraMetadata": {
      "main": "build/electron.js"
    },
    "appId": "org.jbrowse2.app",
    "productName": "JBrowse 2",
    "copyright": "Copyright Â© 2019",
    "fileAssociations": [
      {
        "ext": "jbrowse",
        "name": "JBrowse",
        "role": "Editor"
      }
    ],
    "nsis": {
      "perMachine": true
    },
    "win": {
      "sign": "./sign.js",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "publish": [
        "github"
      ],
      "artifactName": "jbrowse-desktop-v${version}-win.${ext}"
    },
    "linux": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "AppImage"
        }
      ],
      "executableName": "jbrowse-desktop",
      "artifactName": "jbrowse-desktop-v${version}-linux.${ext}"
    },
    "deb": {
      "maintainer": "colin.diesh@gmail.com"
    },
    "snap": {
      "confinement": "strict",
      "plugs": [
        "default",
        "removable-media"
      ],
      "slots": [
        "default"
      ]
    },
    "mac": {
      "mergeASARs": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "publish": [
        "github"
      ],
      "category": "public.app-category.utilities",
      "artifactName": "jbrowse-desktop-v${version}-mac.${ext}"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": [
      "github"
    ],
    "directories": {
      "buildResources": "assets/"
    },
    "afterSign": "scripts/notarize.js",
    "afterPack": "./linux-sandbox-fix.js"
  },
  "private": true
}
