{
  "name": "@jbrowse/clustering",
  "version": "3.7.0",
  "description": "High-performance hierarchical clustering with WASM",
  "keywords": [
    "jbrowse",
    "clustering",
    "wasm",
    "hierarchical-clustering"
  ],
  "license": "Apache-2.0",
  "homepage": "https://jbrowse.org",
  "bugs": "https://github.com/GMOD/jbrowse-components/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/GMOD/jbrowse-components.git",
    "directory": "packages/clustering"
  },
  "author": "JBrowse Team",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": {
      "types": "./esm/index.d.ts",
      "default": "./esm/index.js"
    },
    "require": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "esm"
  ],
  "scripts": {
    "test": "cd ../..; jest --passWithNoTests packages/clustering",
    "coverage": "yarn test --coverage",
    "clean": "rimraf dist esm tsconfig.build.tsbuildinfo",
    "prebuild": "yarn clean",
    "build:wasm": "bash scripts/build_wasm.sh",
    "build:esm": "yarn build:wasm && cp src/wasm/distance.js src/wasm/distance.d.ts src/ && tsc --module esnext --outDir esm",
    "build:cjs": "yarn build:wasm && cp src/wasm/distance.js src/wasm/distance.d.ts src/ && tsc --module commonjs --outDir dist",
    "build": "yarn build:esm && yarn build:cjs",
    "postbuild": "echo '{\"type\": \"commonjs\"}' > dist/package.json",
    "prepack": "yarn build"
  },
  "dependencies": {},
  "publishConfig": {
    "access": "public"
  }
}
