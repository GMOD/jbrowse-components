{
  "name": "@gmod/jbrowse-development-tools",
  "version": "0.0.1-beta.24",
  "description": "Tools to help with developing and building JBrowse 2 plugins",
  "scripts": {
    "test": "jest",
    "coverage": "npm test -- --coverage",
    "lint": "tsc --noEmit && eslint --ext .js,.ts,.jsx,.tsx src",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "babel src --out-dir dist --extensions '.ts,.js'",
    "version": "standard-changelog && git add CHANGELOG.md",
    "prepare": "npm run build",
    "postpublish": "git push origin master --follow-tags"
  },
  "repository": "GMOD/jbrowse-components",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Robert Buels",
    "email": "rbuels@gmail.com",
    "url": "https://github.com/rbuels"
  },
  "license": "MIT",
  "dependencies": {
    "@gmod/jbrowse-core": "^0.0.1-beta.19",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/webpack": "^4.41.18",
    "change-case": "^4.1.1",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "^3.6.0",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "sass": "^1.26.10",
    "sass-loader": "^9.0.2",
    "style-loader": "^1.2.1"
  },
  "peerDependencies": {
    "webpack": "^4.42.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
