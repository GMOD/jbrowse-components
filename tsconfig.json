{
  "compilerOptions": {
    "target": "esnext",
    "verbatimModuleSyntax": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "module": "esnext",
    "removeComments": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@jbrowse/core/*": ["packages/core/src/*"],
      "@jbrowse/web/*": ["products/jbrowse-web/*"],
      "@jbrowse/app-core": ["packages/app-core/src/index.ts"],
      "@jbrowse/plugin-alignments": ["plugins/alignments/src/index.ts"],
      "@jbrowse/plugin-hic": ["plugins/hic/src/index.ts"],
      "@jbrowse/plugin-linear-genome-view": [
        "plugins/linear-genome-view/src/index.ts"
      ],
      "@jbrowse/plugin-variants": ["plugins/variants/src/index.ts"]
    }
  },
  "exclude": [
    "**/build/",
    "**/docs/",
    "**/dist/",
    "**/esm/",
    "**/lib/",
    "**/umd/",
    "**/esm/",
    "**/tmp/",
    "**/config/jest/",
    "**/embedded_demos/",
    "**/component_tests/",
    "**/plugin-development-tools/",
    "**/webpack.config.js",
    "**/website",
    "**/auth_test_utils",
    "products/jbrowse-desktop/test"
  ]
}
