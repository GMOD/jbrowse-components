{
  "name": "root",
  "private": true,
  "type": "module",
  "repository": "https://github.com/GMOD/jbrowse-components",
  "workspaces": [
    "packages/*",
    "products/*",
    "plugins/*"
  ],
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=7000' node --experimental-strip-types scripts/build.ts",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "changeset publish",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test-ci": "NODE_OPTIONS='--max-old-space-size=7000' jest --ci",
    "built-test-ci": "jest --ci integration.test.js",
    "test": "jest",
    "configdocs": "rm -rf website/docs/config && mkdir website/docs/config && node --experimental-strip-types docs/generateConfigDocs.ts",
    "statedocs": "rm -rf website/docs/models && mkdir website/docs/models && node --experimental-strip-types docs/generateStateModelDocs.ts",
    "autogen": "pnpm statedocs && pnpm configdocs && pnpm format",
    "releasenotes": "pnpm prettier --prose-wrap never website/blog/$(ls -Art website/blog/ | tail -n 1)|sed -e '/## Downloads/,+7d'|tail -n +7",
    "copynotes": "pnpm --silent releasenotes | xclip -selection clipboard"
  },
